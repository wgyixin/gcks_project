<div id = "login">
<div id="top-nav">
        <div class="navbar navbar-static-top">
            <div class="navbar-inner">
                <div class="container">
                        <img src="Asserts/img/gcks/login_logo.png">
                        <!--<span style="font-weight: bold;font-size: 31px;color:#1184b5;vertical-align: middle;">北京国创科视有限公司</span>-->
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="modal" id="login" style="top:30%">
            <div class="modal-header">
                <h4>视频云共享管理平台</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal" >
                    <div id="hint" class="control-group hide">
                        <div class="alert alert-error">
                            <div class="controls">
                                <p>invalid username or password</p>
                            </div>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">用户名</label>

                        <div class="controls">
                            {{input type="text" value=username}}
                        </div>
                    </div>

                    <div class="control-group">
                        <label class="control-label">密码</label>

                        <div class="controls">
                            {{input type="password" value=password  enter="login"}}
                        </div>
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary"
                {{action 'login'}}>登录</button>
            </div>
        </div>
    </div>
</div>
{{outlet}}