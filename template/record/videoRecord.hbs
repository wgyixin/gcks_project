<div class="padding-zero container-fluid">
<div class="row-fluid span2 " style="padding-top:30px;">
    <div class="row-fluid span11 offset1">
        <ul class="nav nav-tabs nav-stacked sidebar-nav main-menu">

            <li class="ajax-link active">
                {{#link-to 'record'}}计划执行{{/link-to}}
            </li>
            <li class="ajax-link">
                {{#link-to 'plans'}}计划列表{{/link-to}}
            </li>
        </ul>
    </div>
</div>

<div class="row-fluid span10" style="padding-top:20px;" >
<div class="box">
<!--<div class="box-header well" data-original-title>-->
<!--<h2>摄像头列表</h2>-->
<!--</div>-->
<div class="input-inline" style="padding-top:18px;" data-original-title>
    <!--<h2><i class="icon-user"></i> Members</h2>-->
    <label class="help-inline">数据源:  </label>
    <input  type="text" >
    <label class="help-inline">开始时间:  </label>
    <input class="starttime" type="text"     data-date-format=" yyyy-mm-dd hh:ii"  data-date-viewMode="1" data-date-minViewMode="0"  data-date-weekStart="1">
    <label class="help-inline">结束时间:  </label>
    <input class="endtime" type="text"     data-date-format="yyyy-mm-dd hh:ii"  data-date-viewMode="1" data-date-minViewMode="0"  data-date-weekStart="1">
    &nbsp;&nbsp;&nbsp;&nbsp;<button class="btn btn-success"><i class="icon-search icon-white"></i> 查询</button>
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <!--<button class="btn btn-info">新增</button>-->

    <a href="#add" data-toggle="modal" class="btn btn-success" ><i class="icon-plus icon-white"></i> 新增</a>
    <div class="modal hide" id="add" style="top:20%;" data-backdrop="static">
        <div class="modal-header">
            <a href="#" class="close" data-dismiss="modal" {{action "cancelAdd"}}>×</a>
            <h4>新增</h4>
        </div>

        <div class="modal-body">
            <form class="form-horizontal" >
                <!--<div class="control-group">-->
                    <!--<label class="control-label" >计划编号</label>-->
                    <!--<div class="controls">-->

                        <!--{{input type="text" value=newTaskIpc.task_id }}-->
                    <!--</div>-->
                <!--</div>-->
                <div class="control-group">
                    <label class="control-label" >计划名</label>
                    <div class="controls">
                        {{input type="text" value= newTaskIpc.task_name }}
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" >计划IPC</label>
                    <div class="controls">
                        {{input type="text" value= newTaskIpc.ipc_sid}}
                    </div>
                </div>
                <!--<div class="control-group">-->
                    <!--<label class="control-label" >创建者</label>-->
                    <!--<div class="controls">-->
                        <!--{{input type="text" value= newTaskIpc.creator }}-->
                    <!--</div>-->
                <!--</div>-->
                <div class="control-group">
                    <label class="control-label" >计划开始时间</label>
                    <div class="controls">
                        {{input type="text" class="starttime" value= newTaskIpc.plan_begin_time}}
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" >计划结束时间</label>
                    <div class="controls">
                        {{input type="text" class="endtime" value= newTaskIpc.plan_end_time}}
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" >实际开始时间</label>
                    <div class="controls">
                        {{input type="text" class="real_starttime" value= newTaskIpc.real_begin_time}}
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" >实际结束时间</label>
                    <div class="controls">
                        {{input type="text" class="real_endtime" value= newTaskIpc.real_end_time}}
                    </div>
                </div>
            </form>
        </div>

        <div class="form-actions modal-footer" style="text-align: center;">
            <button class="btn-success" data-dismiss="modal" {{action "addTaskIpc"}}>新增</button>
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            <button  class="btn-info" data-dismiss="modal" >取消</button>
        </div>
    </div>
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

</div>

<div class="box-content">
    <table class="table table-striped table-bordered bootstrap-datatable datatable table-hover table-condensed">
        <thead>
        <tr>
            <!--<th>id</th>-->
            <th>计划编号
                <!--<br>{{input type='text' value=task_id class='width70'}}-->
            </th>
            <th>计划名
                <!--<br>{{input type='text' value=task_name class='width70'}}-->
            </th>
            <th>计划IPC
                <!--<br>{{input type='text' value=ipc_sid class='width70'}}-->
            </th>
            <th>创建者
                <!--<br> {{input type='text' value=creator class='width70'}}-->
            </th>
            <th>计划开始时间
                <!--<br>{{input type='text' value=plan_begin_time class='width70'}}-->
            </th>
            <th>计划结束时间
                <!--<br>{{input type='text' value=plan_end_time class='width70'}}-->
            </th>
            <th>实际开始时间
                <!--<br>{{input type='text' value=real_begin_time class='width70'}}-->
            </th>
            <th>实际结束时间
                <!--<br>{{input type='text' value=real_end_time class='width70'}}-->
            </th>
            <th style="width:10%;text-align:center;">操作<label> </label></th>
        </tr>
        </thead>
        <tbody>

        {{#each paginatedContent}}
            <tr>
                <!--<td class="center">{{sid}}</td>-->
                <td class="center">
                   {{task_id}}
                </td>
                <td class="center">{{task_name}}</td>
                <td class="center">
                    <a href="#" data-toggle="tooltip"  {{bind-attr title=ipc_detail}}>{{ipc_sid}}</a>
                </td>
                <td class="center">{{creator}}</td>
                <td class="center">{{plan_begin_time}}</td>
                <td class="center">{{plan_end_time}}</td>
                <td class="center">{{real_begin_time}}</td>
                <td class="center">{{real_end_time}}</td>
                <td class="center">
                    <!--<a class="btn btn-success" href="#" data-toggle="tooltip" title="查看">-->
                    <!--<i class="icon-zoom-in icon-white"></i>-->
                    <!--View-->
                    <!--</a>-->
                    <a class="btn btn-info" href="#" data-toggle="tooltip" title="编辑" {{action "beforeEdit" this}}>
                        <i class="icon-edit icon-white"></i>
                        <!--Edit-->
                    </a>

                    <!--<a class="btn btn-danger" data-toggle="tooltip" title="删除" {{action "deleteTask" this }}>-->
                        <!--<i class="icon-trash icon-white"></i>-->
                        <!--&lt;!&ndash;Delete&ndash;&gt;-->
                    <!--</a>-->
                    {{delete-confirm title=task_name action="deleteTask" param=this}}

                </td>
            </tr>
        {{/each}}

        </tbody>
    </table>
    <!--分页控件-->
    {{page-number totalPages=totalPages count=count page=page currentTotalCounts=currentTotalCounts perPage=perPage selectPage="selectPage" loadMore="loadMore"}}

</div>

<div class="modal hide" id="edit" style="top:20%;" data-backdrop="static">
    <div class="modal-header">
        <a href="#" class="close" data-dismiss="modal">×</a>
        <h4>修改</h4>
    </div>


    <div class="modal-body">
        <form class="form-horizontal" >
            <div class="control-group">
                <label class="control-label" >计划编号</label>
                <div class="controls">

                    {{input type="text" value=edit_task_id disabled="true"}}
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" >计划名</label>
                <div class="controls">
                    {{input type="text" value= edit_task_name }}
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" >计划IPC</label>
                <div class="controls">
                    {{input type="text" value= edit_ipc_sid}}
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" >创建者</label>
                <div class="controls">
                    {{input type="text" value= edit_creator disabled="true"}}
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" >计划开始时间</label>
                <div class="controls">
                    {{input type="text" class="starttime" value= edit_plan_begin_time}}
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" >计划结束时间</label>
                <div class="controls">
                    {{input type="text" class="endtime" value= edit_plan_end_time}}
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" >实际开始时间</label>
                <div class="controls">
                    {{input type="text" class="starttime" value= edit_real_begin_time}}
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" >实际结束时间</label>
                <div class="controls">
                    {{input type="text" class="endtime" value= edit_real_end_time}}
                </div>
            </div>

        </form>
    </div>

    <div class="form-actions modal-footer" style="text-align: center;">
        <button {{action "editTaskIpc"  }} class="btn-success" data-dismiss="modal">修改</button>
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <button  class="btn-info" data-dismiss="modal">取消</button>

    </div>
</div>
</div><!--/span-->

</div>
</div>