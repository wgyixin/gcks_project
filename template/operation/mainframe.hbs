<div class=" padding-zero container-fluid">
    <div class="row-fluid span2 " style="padding-top:30px;">
        <div class="row-fluid span12">
        <ul class="nav nav-tabs nav-stacked sidebar-nav main-menu">

            {{#if serviceRule}}
                <li class="ajax-link ">
                    {{#link-to 'service'}}服务{{/link-to}}
                </li>
            {{/if}}
            {{#if cnRule}}
                <li class="ajax-link ">
                    {{#link-to 'cn'}}控制服务器{{/link-to}}
                </li>
            {{/if}}
            {{#if rnRule}}
                <li class="ajax-link">
                    {{#link-to 'rn'}}媒体服务器{{/link-to}}
                </li>
            {{/if}}
            <!--<li class="ajax-link">-->
            <!--{{#link-to 'database'}}数据库{{/link-to}}-->
            <!--</li>-->
            <!--<li class="ajax-link">-->
            <!--{{#link-to 'webServer'}}Web Server{{/link-to}}-->
            <!--</li>-->
            {{#if hostsRule}}
                <li class="ajax-link active">
                    {{#link-to 'mainframe'}}主机{{/link-to}}
                </li>
            {{/if}}
            {{#if logRule}}
                <li class="ajax-link">
                    {{#link-to 'logs'}}日志{{/link-to}}
                </li>
            {{/if}}
        </ul>
            </div>
    </div>
    <div class="row-fluid span10" style="padding-top:20px;" >
    <div class="box">


    <div class="box-content">
        <table class="table table-striped table-bordered bootstrap-datatable datatable table-hover table-condensed">
            <thead>
            <tr>
                <!--<th>id</th>-->
                <th class="width8" style="text-align: center" >主机名
                </th >

                <th class="width8" style="text-align: center">IP地址
                </th>
                <th class="width8" style="text-align: center">CPU
                </th>
                <th class="width8" style="text-align: center">内存
                </th>
                <th class="width8" style="text-align: center">硬盘使用率
                </th>
                <th class="width8" style="text-align: center">组件</th>
            </tr>
            </thead>
            <tbody>

            {{#each  paginatedContent}}
                <tr>
                    <td style=" vertical-align: middle;">
                        <div style="width: 30px;margin-left: 10px;margin-right: 5px;" class="help-inline">
                            {{#if host_status}}
                                <i class="ipc-online"></i>
                            {{else}}
                                <i class="ipc-offline"></i>
                            {{/if}}

                        </div>

                       {{name}}
                    </td>
                    <td style="text-align: center;vertical-align: middle;">{{ip}}</td>
                    <td style="text-align: center;vertical-align: middle;">{{cpu}}</td>
                    <td style="text-align: center;vertical-align: middle;">{{ram}}</td>
                    <td style="text-align: center;vertical-align: middle;">
                        <div class="progress" data-toggle="tooltip" {{bind-attr title=disk_usage_detail}}>
                            <div class="bar" {{bind-attr style=disk_usage}}></div>
                        </div>
                    </td>
                    <td style="text-align: center;vertical-align: middle;">
                        <a href='#' {{action 'showComponents' id}} class="help-inline">
                               <span class="caret right"></span>{{componentsNum}} Components
                        </a>
                        <div {{bind-attr id=id}} style="display: none;font-size: 12px;">
                            {{#each rn in rnList}}
                                {{rn}}<br>
                            {{/each}}

                            {{#each cn in cnList}}
                                {{cn}}<br>
                            {{/each}}
                        </div>


                    </td>
                </tr>

            {{/each}}


            </tbody>
        </table>
        <!--分页控件-->
        {{page-number totalPages=totalPages count=count page=page currentTotalCounts=currentTotalCounts perPage=perPage selectPage="selectPage" loadMore="loadMore"}}


    </div>

    </div>
    </div>
</div>
