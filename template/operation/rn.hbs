<div class="padding-zero container-fluid">
    <div class="row-fluid span2 " style="padding-top:30px;">
        <div class="row-fluid span12 ">
        <ul class="nav nav-tabs nav-stacked sidebar-nav main-menu">

            {{#if serviceRule}}
                <li class="ajax-link ">
                    {{#link-to 'service'}}服务{{/link-to}}
                </li>
            {{/if}}
            {{#if cnRule}}
                <li class="ajax-link ">
                    {{#link-to 'cn'}}控制服务器{{/link-to}}
                </li>
            {{/if}}
            {{#if rnRule}}
                <li class="ajax-link active">
                    {{#link-to 'rn'}}媒体服务器{{/link-to}}
                </li>
            {{/if}}
            <!--<li class="ajax-link">-->
            <!--{{#link-to 'database'}}数据库{{/link-to}}-->
            <!--</li>-->
            <!--<li class="ajax-link">-->
            <!--{{#link-to 'webServer'}}Web Server{{/link-to}}-->
            <!--</li>-->
            {{#if hostsRule}}
                <li class="ajax-link">
                    {{#link-to 'mainframe'}}主机{{/link-to}}
                </li>
            {{/if}}
            {{#if logRule}}
                <li class="ajax-link">
                    {{#link-to 'logs'}}日志{{/link-to}}
                </li>
            {{/if}}
        </ul>
            </div>
    </div>
    <div class="row-fluid span10" style="padding-top:20px;" >
        <div class="box">
            <div class="input-inline" style="padding-top:18px; display: none;" data-original-title>

                <label class="help-inline">&nbsp;&nbsp;开始时间:  </label>
                <input class="starttime" type="text"     data-date-format=" yyyy-mm-dd hh:ii"  data-date-viewMode="1" data-date-minViewMode="0"  data-date-weekStart="1">
                <label class="help-inline">结束时间:  </label>
                <input class="endtime" type="text"     data-date-format="yyyy-mm-dd hh:ii"  data-date-viewMode="1" data-date-minViewMode="0"  data-date-weekStart="1">
                &nbsp;&nbsp;&nbsp;&nbsp;<button class="btn btn-success"><i class="icon-search icon-white"></i> 查询</button>
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

            </div>
            <div class="box-content">
                <table class="table table-striped table-bordered bootstrap-datatable datatable table-hover table-condensed">
                    <thead>
                    <tr>
                        <th style="text-align: center;">服务编号</th>
                        <th style="text-align: center;">服务名称</th>
                        <th style="text-align: center;">服务地址</th>
                        <th style="text-align: center;">服务端口</th>
                        <th style="text-align: center;">启动时间</th>
                        <th style="text-align: center;">当前 / 已处理任务</th>
                        <th style="text-align: center;">生存状态</th>

                    </tr>
                    </thead>
                    <tbody>
                    {{#each paginatedContent}}
                        <tr>
                            <td style="text-align: center;vertical-align: middle;">
                                <a href="#" data-toggle="tooltip"  {{bind-attr title=descp}}>{{sid}}</a>
                            </td>
                            <td style="text-align: center;vertical-align: middle;">{{rn_name}}</td>
                            <td style="text-align: center;vertical-align: middle;">{{host}}</td>
                            <td style="text-align: center;vertical-align: middle;">{{port}}</td>
                            <td style="text-align: center;vertical-align: middle;">{{install_time}}</td>
                            <td style="text-align: center;vertical-align: middle;">{{workStatus}}</td>
                            <td style="text-align: center;vertical-align: middle;">
                                {{#if is_alive}}
                                    <i class="ipc-online"></i>
                                {{else}}
                                    <i class="ipc-offline"></i>
                                {{/if}}
                            </td>

                        </tr>
                    {{/each}}

                    </tbody>
                </table>
                <!--分页控件-->
                {{page-number totalPages=totalPages count=count page=page currentTotalCounts=currentTotalCounts perPage=perPage selectPage="selectPage" loadMore="loadMore"}}

            </div>

        </div><!--/span-->

    </div>
</div>
