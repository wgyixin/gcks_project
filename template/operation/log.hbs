<div class="padding-zero container-fluid">
    <div class="row-fluid span2 " style="padding-top:30px;">
        <div class="row-fluid span12">
            <ul class="nav nav-tabs nav-stacked sidebar-nav main-menu">

                {{#if serviceRule}}
                    <li class="ajax-link ">
                        {{#link-to 'service'}}服务{{/link-to}}
                    </li>
                {{/if}}
                {{#if cnRule}}
                    <li class="ajax-link">
                        {{#link-to 'cn'}}控制服务器{{/link-to}}
                    </li>
                {{/if}}
                {{#if rnRule}}
                    <li class="ajax-link">
                        {{#link-to 'rn'}}媒体服务器{{/link-to}}
                    </li>
                {{/if}}
                <!--<li class="ajax-link">-->
                <!--{{#link-to 'database'}}数据库{{/link-to}}-->
                <!--</li>-->
                <!--<li class="ajax-link">-->
                <!--{{#link-to 'webServer'}}Web Server{{/link-to}}-->
                <!--</li>-->
                {{#if hostsRule}}
                    <li class="ajax-link">
                        {{#link-to 'mainframe'}}主机{{/link-to}}
                    </li>
                {{/if}}
                {{#if logRule}}
                    <li class="ajax-link active">
                        {{#link-to 'logs'}}日志{{/link-to}}
                    </li>
                {{/if}}

            </ul>
        </div>
    </div>
    <div class="row-fluid span10" style="padding-top:20px;" >
        <div class="box">
            <div class="input-inline" style="padding-top:18px;" data-original-title>

                <label class="help-inline">&nbsp;&nbsp;开始时间:</label>
                {{input class="starttime" type="text"  data-date-format=" yyyy-mm-dd hh:ii" data-date-viewMode="1" data-date-minViewMode="0" data-date-weekStart="1" value=search_startTime}}

                <label class="help-inline">结束时间:</label>
                {{input class="endtime" type="text"  data-date-format="yyyy-mm-dd hh:ii" data-date-viewMode="1" data-date-minViewMode="0" data-date-weekStart="1" value=search_endTime}} &nbsp;&nbsp;&nbsp;&nbsp;

                <label class="help-inline">操作类型:</label>
                {{view Ember.Select viewName="select"
                contentBinding="typeList"
                selectionBinding="selectedType" }}
                <label class="help-inline">操作用户</label>
                {{input type="text" value=search_user}}

                &nbsp;&nbsp;
                <button class="btn btn-success" {{action 'search'}} style="vertical-align: top;"><i class="icon-search icon-white"></i> 查询</button>

            </div>
            <div class="box-content">
                <table class="table table-striped table-bordered bootstrap-datatable datatable table-hover table-condensed">
                    <thead>
                    <tr>
                        <th style="text-align: center">级别
                        </th>
                        <th style="text-align: center">操作类型
                        </th>
                        <th style="text-align: center">操作源
                        </th>
                        <th style="text-align: center">操作目标
                        </th>
                        <th style="text-align: center">操作用户
                        </th>
                        <th style="text-align: center">操作时间
                        </th>
                        <th style="text-align: center">操作时长(秒)
                        </th>

                        <th style="text-align: center">日志内容
                        </th>

                    </tr>
                    </thead>
                    <tbody>
                    {{#each paginatedContent}}
                        <tr>
                            <td style="text-align: center;vertical-align: middle;">{{level_name}}</td>
                            <td style="text-align: center;vertical-align: middle;">{{type}}</td>
                            <td style="text-align: center;vertical-align: middle;">{{src}}</td>
                            <td style="text-align: center;vertical-align: middle;">{{goal}}</td>
                            <td style="text-align: center;vertical-align: middle;">{{op_user}}</td>
                            <td style="text-align: center;vertical-align: middle;">{{operationTime}}</td>
                            <td style="text-align: center;vertical-align: middle;">{{duration}}</td>

                            <td style="text-align: center;vertical-align: middle;">
                                <a href="#" data-toggle="tooltip"  {{bind-attr title=content}}>{{less_content}}</a>
                            </td>

                        </tr>

                    {{/each}}

                    </tbody>
                </table>
                <!--分页控件-->
                {{page-number totalPages=totalPages count=count page=page currentTotalCounts=currentTotalCounts perPage=perPage selectPage="selectPage" loadMore="loadMore"}}

            </div>

        </div><!--/span-->

    </div>
</div>
