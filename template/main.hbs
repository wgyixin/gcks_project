<div class="modal hide" id="updatePasswd" style="top:20%;z-index:9999" data-backdrop='static'>
    <div class="modal-header">
        <a href="#" class="close" {{action 'removeIframe_ActiveX'}}>×</a>
        <h4>修改用户密码</h4>
    </div>


    <div class="modal-body">
        <form class="form-horizontal" style="position: relative;" >
            <div class="control-group">
                <label class="control-label" >原密码<i style="color:red">*</i></label>
                <div class="controls">
                    {{view App.ValidataionTextField id="oldPassword" valueBinding="oldPassword" type="password"}}
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" >新密码<i style="color:red">*</i></label>
                <div class="controls">
                    {{view App.ValidataionTextField id="newPassword" valueBinding="newPassword"  type="password"}}
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" >确认新密码<i style="color:red">*</i></label>
                <div class="controls">
                    {{view App.ValidataionTextField id="rePassword" valueBinding="rePassword"  type="password" enter="validateForPasswd"}}
                </div>
            </div>


        </form>
    </div>

    <div class="form-actions modal-footer" style="text-align: center;">
        <button {{action "validateForPasswd"}} class="btn-success" >修改</button>
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <button  class="btn-info" {{action 'removeIframe_ActiveX'}}>取消</button>

    </div>
</div>

